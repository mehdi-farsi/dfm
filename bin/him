#!/usr/bin/env ruby

# PATH_TO_GEMSET/him-VERSION/lib
him_dir = File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib'))

# add him_dir to LOAD_PATH
$LOAD_PATH.unshift(him_dir) unless $LOAD_PATH.include?(him_dir)

require "him"

options = Him::ArgumentsParser.new.parse

if options.keys.include? :help
  puts options[:help]
  exit
end